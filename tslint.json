{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-config-standard"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "interface-name": false,
    "jsx-no-multiline-js": false,
    "ordered-imports": [
      true,
      {
        "grouped-imports": true
      }
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template",
      "jsx-double"
    ]
  }
}
