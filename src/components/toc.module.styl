.toc {
  font-size 0.75rem
  position relative
  border-left #f4c900 5px solid
  padding-bottom 0.5em

  .scroll-container {
    max-height calc(90vh - 200px)
    overflow-y auto
    overflow-x hidden
    margin-left -5px
  }

  ul {
    margin 0
    li {
      padding 0
      margin 0
      list-style none
      line-height 1

      a {
        display inline-block
        line-height 2
        overflow visible
        width 100%

        .text {
          width 100%
          white-space nowrap
          text-overflow ellipsis
          overflow hidden
          background-color #fff
        }
      }
    }
  }

  a {
    color #5f5f5f
    border-left #f4c900 5px solid
    position relative

    &:hover {
      color #8e8e8e
    }

    .anchor.anchor-hide {
      transform scale(0%, 0%) translateY(-50%)
    }

    .anchor {
      transition transform ease-in 250ms
      display block
      position absolute
      left -10px
      top 50%
      transform scale(100%, 100%) translateY(-50%)
      transform-origin center -25%
      width 15px
      height 15px
      background-color #fff
      border-radius 50%

      .anchor-dot {
        display block
        position absolute
        left 50%
        top 50%
        width 5px
        height 5px
        transform translate(-50%, -50%)
        background-color #f4c900
        border-radius 50%
      }
    }
  }

  .focus {
    a, a:hover {
      color #e87844
    }
  }

  .header {
    display inline-block
    margin-left -5px
  }

}

