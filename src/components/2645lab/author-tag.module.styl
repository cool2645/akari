.author-tag {
  display inline-flex
  align-items center
  position relative
  margin-right 0.4rem
  border-radius 0.55em
  vertical-align middle

  img {
    margin-bottom 0
    display inline
    height 1.1em
    border-radius 50%
  }

  span {
    vertical-align middle
    font-size 1.1rem
    font-weight normal
    font-family "Hanyi ShangWei Shoushu"
    margin 0 0.8rem 0 0.6rem
  }

}
