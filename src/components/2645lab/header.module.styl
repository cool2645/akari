.header-img {
  max-width 800px
  margin 0 auto
  position relative

  .banner {
    position absolute
    height 30%
    min-height 80px
    width 100%
    top 45%
    transform translateY(-50%)
    background-color rgba(255, 255, 255, 0.8)

    display flex
    flex-direction column
    justify-content center

    h1 {
      text-align center
      margin 0
    }

  }

  img {
    margin-bottom 0
  }

}

.title, .title:hover {
  color #000
}
