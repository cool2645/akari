.scroll-to-top {
  position fixed
  bottom 4.5rem
  left 10%
  width 64px
  height 0
  padding-bottom 45px
  background-image url("../images/neko.webp")
  background-position center
  background-size 100%
  background-repeat no-repeat
  opacity 1
  transition all .2s ease-in-out 0s
  cursor pointer
  z-index 999
}

.hide {
  opacity 0
  bottom -80px
}
